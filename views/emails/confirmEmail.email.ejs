<body>
    <style>
        .container {
            padding: 2.5rem 1rem;
            display: flex;
            flex-direction: column;
            align-items: center;
            row-gap: 2.5rem;
        }

        .message {
            text-align: center;
            color: rgb(55, 65, 81);
            font-weight: 600;
        }

        .link {
            margin-inline: auto;
            font-weight: 600;
            background-color: #25A55F;
            padding: 5px 10px;
            border-radius: 5px;
            color: white !important;
        }

    </style>
    <div class="container">

        <% if (process.env.NODE_ENV === 'development') { %>
        <img src="http://localhost:3000/assets/images/logo-primary.svg" alt="Quiziz">
        <% } else { %>
        <img src="https://quiziz-app.herokuapp.com/assets/images/logo-primary.svg" alt="Quiziz">
        <% } %>

        <p class="message">
            Thanks for signing up.
            <br /> <br /> <br /> You have 30 minutes to click the link below in order to confirm your account.
            <br /> <br /> If it's not you, just ignore this email.
        </p>

        <% if (process.env.NODE_ENV === 'development') { %>
        <a href="http://localhost:3000/confirmEmail/<%= token %>" target="_blank" class="link">Confirm Email</a>
        <% } else { %>
        <a href="https://quiziz-app.herokuapp.com/confirmEmail/<%= token %>" target="_blank" class="link">Confirm Email</a>
        <% } %>
    </div>
</body>
